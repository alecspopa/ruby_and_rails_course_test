<div class="container">
  <% flash.each do |_key, value| %>
    <div class="alert alert-primary" role="alert"><%= value %></div>
  <% end %>

  <div class="row">
    <div class="media">
      <%= image_tag @product.image.variant(resize: '64x64'), class: 'align-self-start mr-3' %>
      <div class="media-body">
        <h5 class="mt-0"><%= @product.name %> (<%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Back', products_path %>)</h5>
        <p><%= @product.description %></p>
        <p>Price: <%= @product.price %></p>
      </div>
    </div>
  </div>


</div>


